<input type="file" id="file">
<script>
document.getElementById('file').onchange = e => {
  let f = e.target.files[0];
  let r = new FileReader();
  r.onload = () => console.log(r.result); // 这里就是string
  r.readAsText(f);
};
</script>

//Node.js env
const fs = require('fs');
let text = fs.readFileSync('file.txt', 'utf8');
console.log(text);


<button onclick="fetch('file.txt').then(r => r.text()).then(t => console.log(t))">
  Load Txt
</button>